{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "name": "connector-brisbane-city-council"
  },
  "spec": {
    "template": {
      "metadata": {
        "name": "connector-brisbane-city-council"
      },
      "spec": {
        "containers": [
          {
            "name": "connector-brisbane-city-council",
            "image": "data61/magda-ckan-connector:0.0.27-SNAPSHOT",
            "command": [
              "node",
              "/usr/src/app/component/bin/index.js",
              "--config",
              "/etc/config/connector.json",
              "--registryUrl",
              "http://registry-api/v0"
            ],
            "imagePullPolicy": "Always",
            "resources": {
              "requests": {
                "cpu": "0m"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/etc/config",
                "name": "config"
              }
            ],
            "env": [
              {
                "name": "JWT_SECRET",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "oauth-secrets",
                    "key": "jwt-secret"
                  }
                }
              }
            ]
          }
        ],
        "restartPolicy": "OnFailure",
        "volumes": [
          {
            "name": "config",
            "configMap": {
              "name": "connector-config",
              "items": [
                {
                  "key": "brisbane-city-council.json",
                  "path": "connector.json"
                }
              ]
            }
          }
        ]
      }
    }
  }
}