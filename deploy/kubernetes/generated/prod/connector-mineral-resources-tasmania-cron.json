{
  "apiVersion": "batch/v2alpha1",
  "kind": "CronJob",
  "metadata": {
    "name": "connector-mineral-resources-tasmania"
  },
  "spec": {
    "schedule": "* * */3 * *",
    "jobTemplate": {
      "spec": {
        "template": {
          "metadata": {
            "name": "connector-mineral-resources-tasmania"
          },
          "spec": {
            "containers": [
              {
                "name": "connector-mineral-resources-tasmania",
                "image": "data61/magda-csw-connector:0.0.27-SNAPSHOT",
                "command": [
                  "node",
                  "/usr/src/app/component/bin/index.js",
                  "--config",
                  "/etc/config/connector.json",
                  "--registryUrl",
                  "http://registry-api/v0"
                ],
                "imagePullPolicy": "Always",
                "resources": {
                  "requests": {
                    "cpu": "0m"
                  }
                },
                "volumeMounts": [
                  {
                    "mountPath": "/etc/config",
                    "name": "config"
                  }
                ],
                "env": [
                  {
                    "name": "JWT_SECRET",
                    "valueFrom": {
                      "secretKeyRef": {
                        "name": "oauth-secrets",
                        "key": "jwt-secret"
                      }
                    }
                  }
                ]
              }
            ],
            "restartPolicy": "OnFailure",
            "volumes": [
              {
                "name": "config",
                "configMap": {
                  "name": "connector-config",
                  "items": [
                    {
                      "key": "mineral-resources-tasmania.json",
                      "path": "connector.json"
                    }
                  ]
                }
              }
            ]
          }
        }
      }
    }
  }
}