{
  "name": "@magda/apidocs-server",
  "description": "The MAGDA in-browser api documentation.",
  "version": "0.0.47-0",
  "license": "Apache-2.0",
  "scripts": {
    "build": "generate-api-documentation --config $PWD --output $PWD/build",
    "docker-build-local": "create-docker-context-for-node-component --build --push --tag auto --local",
    "docker-build-prod": "create-docker-context-for-node-component --build --push --tag auto"
  },
  "devDependencies": {
    "@magda/scripts": "^0.0.47-0"
  },
  "proxy": {
    "/server-config.js": {
      "target": "http://localhost:6118/"
    }
  },
  "config": {
    "docker": {
      "include": "default.conf build"
    }
  },
  "magda": {
    "language": "javascript",
    "categories": {
      "ui": true
    }
  }
}
