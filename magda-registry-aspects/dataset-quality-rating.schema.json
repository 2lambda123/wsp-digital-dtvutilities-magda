{
  "$schema": "http://json-schema.org/schema#",
  "title": "Aspect describing the quality rating of a dataset as determined by a number of different sleuthers out of 100, along with the weight that they carry.",
  "type": "object",
  "properties": {
    "additionalProperties": { "type": "object", "$ref": "#/definitions/rating" }
  },
  "definitions": {
    "rating": {
      "type": "object",
      "properties": {
        "percentage": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "weighting": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10
        }
      }
    }
  }
}
