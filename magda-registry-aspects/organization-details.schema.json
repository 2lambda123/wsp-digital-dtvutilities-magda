{
    "$schema": "http://json-schema.org/schema#",
    "title": "Aspect for capturing basic details of an organization",
    "type": "object",
    "properties": {
        "name": {
            "title": "A short name given to the organization.",
            "type": "string"
        },
        "title": {
            "title": "A name given to the organization.",
            "type": "string"
        },
        "description": {
            "title": "Free-text account of the organization.",
            "type": "string"
        },
        "imageUrl": {
            "title":
                "The URL of an image representing the organization, such as its logo.",
            "type": "string"
        },
        "telephone": {
            "title":
                "The organization contact telephone number",
            "type": "string"
        },
        "email": {
            "title":
                "The organization contact email address",
            "type": "string"
        },
        "website": {
            "title":
                "The organization website",
            "type": "string"
        }
    }
